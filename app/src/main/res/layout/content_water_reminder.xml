<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_water_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.siddharth.sid_aid.WaterReminder"
    tools:showIn="@layout/activity_water_reminder">

    <TextView
        android:id="@+id/ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="@string/water_calculator"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:hint="Enter your Weight In KG"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/workbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:hint="Click to Enter Nature Of Work "
        android:textSize="20sp" />


    <com.spark.submitbutton.SubmitButton
        android:id="@+id/calculatewaterbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="Calculate"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:sub_btn_background="@color/gray"
        app:sub_btn_duration="2000"
        app:sub_btn_line_color="#28ffae"
        app:sub_btn_ripple_color="#eed28e"
        app:sub_btn_tick_color="@color/gray" />


</LinearLayout>







